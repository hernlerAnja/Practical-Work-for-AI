select surf_pocket2, protein and id [1540,1326,1582,1568,1575,1566,1567,1581,1580,991,695,697,664,667,992,694,999,1001,669,671,709,1564,1565,1325] 
set surface_color,  pcol2, surf_pocket2 
   
        
